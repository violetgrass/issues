{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "blazorwasm",
            "name": "Launch and Debug Blazor WebAssembly Application",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/Violet.WorkItems.BlazorWebFrontend",
            "url": "https://localhost:7158",
            "browser": "chrome"
        },
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Violet.WorkItems.Cli/bin/Debug/net5.0/Violet.WorkItems.Cli.dll",
            "args": [
                "detail",
                "UI",
                "1240"
            ],
            "cwd": "${workspaceFolder}/src/Violet.WorkItems.Cli",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Launch (service)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Violet.WorkItems.Service/bin/Debug/net5.0/Violet.WorkItems.Service.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Violet.WorkItems.Service",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}