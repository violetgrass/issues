{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "WorkItems": {
    "ApiEndpoint": {
      "Uri": "http://localhost:5001"
    },
    "BrowserEndpoint": {
      "Uri": "http://localhost:4200",
      "Origin": [
        "http://localhost:4200"
      ]
    },
    "AccessToken": {
      "Enabled": true,
      "Providers": [
        {
          "Authority": "https://localhost:6001",
          "HasInvalidCertificate": true,
          "RequiredClaims": {
            "scope": [
              "workitems"
            ]
          }
        }
      ]
    }
  }
}